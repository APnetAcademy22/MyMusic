@model BranoViewModel;
@{
    ViewBag.Title = "Aggiungi Brano";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div>
            Aggiungi Brano:
        </div>
        <hr>
        <div class="form-group">
            @Html.LabelFor(model => model.Titolo, htmlAttributes:new{@Class = "label col-nd-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Titolo)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NomeBand, htmlAttributes:new{@Class = "label col-nd-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeBand)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NomeAlbum, htmlAttributes:new{@Class = "label col-nd-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeAlbum)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Anno, htmlAttributes:new{@Class = "label col-nd-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Anno)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Durata, htmlAttributes:new{@Class = "label col-nd-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Durata)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Genere, htmlAttributes:new{@Class = "label col-nd-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Genere)
            </div>
        </div>

        <div class="form=group">
            <div class="col-md-offset col-md-10">
                <input type="submit" value="Salva" class="btn btn-default"/>
            </div>
        </div>
    </div>
}
